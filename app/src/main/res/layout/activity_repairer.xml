<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Repairer">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incoming tasks" />

    <Spinner
        android:id="@+id/incomingTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/taskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Name" />

    <TextView
        android:id="@+id/taskLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Location" />

    <TextView
        android:id="@+id/taskInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Instruction" />

    <TextView
        android:id="@+id/taskDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task Date" />

    <TextView
        android:id="@+id/isEmergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Is Emergency" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/acceptTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accept" />

        <Button
            android:id="@+id/denyTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deny" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To do list" />

    <ListView
        android:id="@+id/toDoTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>